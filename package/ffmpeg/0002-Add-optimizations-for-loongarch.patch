+    int ytemp    = 1 << 21;
+    v4i32 y_temp = __msa_fill_w(ytemp);
+    yuvTorgb_setup
+
+    if(   target == AV_PIX_FMT_BGR4_BYTE || target == AV_PIX_FMT_RGB4_BYTE
