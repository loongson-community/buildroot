+    __m128i _t0, _t1, _t2, _t3, _t4, _t5, _t6, _t7;                                \
+    LSX_DUP4_ARG2(__lsx_vilvl_b, _in2, _in0, _in3, _in1, _in6, _in4, _in7, _in5,   \
