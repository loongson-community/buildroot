+     v_l = __msa_maddv_w(v_l, v2g, y_l);                         \
+     G_r = __msa_maddv_w(u_r, u2g, v_r);                         \
+     G_l = __msa_maddv_w(u_l, u2g, v_l);                         \
+     B_r = __msa_maddv_w(u_r, u2b, y_r);                         \
+     B_l = __msa_maddv_w(u_l, u2b, y_l);                         \
+
