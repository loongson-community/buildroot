+    LSX_DUP4_ARG2(__lsx_vld, dst_tmp, -4, dst_tmp + stride, -4, dst_tmp + stride2, -4,
+                  dst_tmp + stride3, -4, row8, row9, row10, row11);
+    dst_tmp += stride4;
+    LSX_DUP4_ARG2(__lsx_vld, dst_tmp, -4, dst_tmp + stride, -4, dst_tmp + stride2, -4,
+                  dst_tmp + stride3, -4, row12, row13, row14, row15);
