+        u    = __msa_srai_w(u, 19);
+        v    = __msa_srai_w(v, 19);
+        u    = __msa_addv_w(u, headroom);
+        v    = __msa_addv_w(v, headroom);
+        for (int j = 0; j < 2; j++) {
+            int Y1, Y2, U, V;
+            int m = j * 2;
