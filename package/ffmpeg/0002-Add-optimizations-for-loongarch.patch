+    _out0 = __lsx_vadd_b(_in0, _in3);                                     \
+    _out1 = __lsx_vadd_b(_in1, _in2);                                     \
+    _out2 = __lsx_vsub_b(_in1, _in2);                                     \
+    _out3 = __lsx_vsub_b(_in0, _in3);                                     \
