+#define BUTTERFLY_4_H(_in0, _in1, _in2, _in3, _out0, _out1, _out2, _out3) \
+{                                                                         \
+    _out0 = __lsx_vadd_h(_in0, _in3);                                     \
+    _out1 = __lsx_vadd_h(_in1, _in2);                                     \
+    _out2 = __lsx_vsub_h(_in1, _in2);                                     \
+    _out3 = __lsx_vsub_h(_in0, _in3);                                     \
