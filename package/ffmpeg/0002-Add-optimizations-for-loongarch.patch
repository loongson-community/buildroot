+    LASX_ILVL_D_2_128SV(tp2, tp0, tp3, tp1, tp0, tp2);
+    LASX_PCKEV_Q(tp2, tp0, dst1);
+    out0 = __lasx_xvavgr_bu(out0, dst0);
+    out1 = __lasx_xvavgr_bu(out1, dst1);
+    LASX_ST_D_4(out0, 0, 2, 1, 3, dst, stride);
