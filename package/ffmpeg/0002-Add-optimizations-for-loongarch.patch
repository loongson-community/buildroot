+    LASX_ST(in0, (pdst));                                                   \
+    LASX_ST(in1, (pdst) + stride);                                          \
+}
+
+#define LASX_ST_4(in0, in1, in2, in3, pdst, stride)                         \
+{                                                                           \
+    LASX_ST_2(in0, in1, (pdst), stride);                                    \
+    LASX_ST_2(in2, in3, (pdst) + 2 * stride, stride);                       \
