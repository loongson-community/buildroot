+    _t3   = __lsx_vilvh_w(_in3, _in2);                                     \
+    _out0 = __lsx_vilvl_d(_t2, _t0);                                       \
+    _out1 = __lsx_vilvh_d(_t2, _t0);                                       \
+    _out2 = __lsx_vilvl_d(_t3, _t1);                                       \
+    _out3 = __lsx_vilvh_d(_t3, _t1);                                       \
